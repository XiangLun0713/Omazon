            </ImageView>
         </children>
        </AnchorPane>
        <HBox alignment="CENTER" layoutX="1.0" layoutY="268.0" prefHeight="532.0" prefWidth="1280.0">
            <children>
                <ScrollPane prefHeight="501.0" prefWidth="1176.0" styleClass="transparent" stylesheets="@styling.css">
                    <content>
                        <GridPane fx:id="grid" prefHeight="10.0" prefWidth="1.0">
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                            </rowConstraints>
                        </GridPane>
                    </content>
                    <HBox.margin>
                        <Insets top="10.0" />
                    </HBox.margin>
                </ScrollPane>
            </children>
        </HBox>
      <Label layoutX="71.0" layoutY="227.0" text="Search for ">
         <font>
            <Font name="Times New Roman" size="36.0" />
         </font>
      </Label>
      <Label fx:id="productToSearch" layoutX="237.0" layoutY="227.0" prefHeight="40.0" prefWidth="647.0" textFill="#f20303">
         <font>
            <Font name="Times New Roman" size="36.0" />
         </font>
      </Label>
    </AnchorPane>
</ScrollPane>
