<ScrollPane hbarPolicy="NEVER" vbarPolicy="NEVER" vmax="2.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.omazonproject.ProductSearchController">
    <AnchorPane prefHeight="800.0" prefWidth="1280.0">
        <ImageView fitHeight="150.0" fitWidth="1280.0" layoutX="-2.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../images/bannerHomepage.gif" />
            </image>
        </ImageView>
        <ImageView fitHeight="33.0" fitWidth="33.0" layoutX="1221.0" layoutY="69.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../images/malaysiaFlag.png" />
            </image>
        </ImageView>
        <Label layoutX="1163.0" layoutY="94.0" prefHeight="27.0" prefWidth="117.0" text="Deliver to Malaysia" />
        <ImageView fitHeight="172.0" fitWidth="302.0" layoutX="-24.0" layoutY="-50.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../images/logoMarkOmazon.png" />
            </image>
        </ImageView>
        <AnchorPane layoutX="-2.0" layoutY="120.0" prefHeight="62.0" prefWidth="1280.0" style="-fx-background-color: b4e7ce;">
         <children>
            <ImageView fitHeight="35.0" fitWidth="36.0" layoutX="1152.0" layoutY="14.0" onMouseClicked="#HomeButtonPressed" pickOnBounds="true" preserveRatio="true">
