<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="300.0" prefWidth="496.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.omazonproject.ChatWithSellerController">
    <children>
        <Label layoutX="14.0" layoutY="12.0" prefHeight="26.0" prefWidth="27.0" text="To:">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>
        <Label fx:id="sellerNameLabel" layoutX="46.0" layoutY="13.0" text="Seller Name">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>
        <TextArea fx:id="textArea" layoutX="41.0" layoutY="48.0" prefHeight="204.0" prefWidth="414.0"
                  promptText="Enter your message here"/>
        <Button layoutX="440.0" layoutY="263.0" mnemonicParsing="false" onAction="#sendButtonPressed"
                style="-fx-background-color: b4e7ce; -fx-border-color: c4c4c4; -fx-background-radius: 7; -fx-border-radius: 7;"
                text="Send" textFill="#847e7e">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
